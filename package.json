{
  "name": "@theobassan/module-federation-plugin",
  "version": "0.0.0",
  "description": "Create types for exposed componentes, and download then for remotes",
  "license": "WTFPL",
  "keywords": [
    "Module Federation",
    "Module Federation Plugin",
    "TypeScript"
  ],
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git://theobassan/module-federation-plugin"
  },
  "bugs": {
    "url": "https://github.com/heobassan/module-federation-types-plugin/issues"
  },
  "homepage": "https://github.com/theobassan/module-federation-types-plugin#readme",
  "scripts": {
    "release": "np",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm pack",
    "postpublish": "npm run delete:build && npm run delete:pack",
    "build": "tsc --declaration",
    "delete:build": "rm -rf lib",
    "delete:pack": "rm -rf module-federation-plugin-*",
    "test:all": "npm test && npm run lint",
    "test": "echo \"Error: no test specified\"",
    "lint": "eslint '*/**/*.ts'",
    "lint:fix": "eslint '*/**/*.ts' --fix",
    "lint:staged": "lint-staged",
    "lint:staged:fix": "eslint --fix"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:staged:fix"
    ]
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/gzip-js": "^0.3.3",
    "@types/node": "^16.9.6",
    "@types/tar": "^4.0.5",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "np": "^7.5.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0"
  },
  "dependencies": {
    "@tsconfig/node16": "^1.0.1",
    "fs-extra": "^10.0.0",
    "gzip-js": "^0.3.2",
    "tar": "^6.1.11"
  },
  "publishConfig": {
    "access": "public"
  },
  "np": {
    "branch": "main",
    "cleanup": true,
    "tests": true,
    "publish": true,
    "preview": false,
    "tag": "latest",
    "yarn": false,
    "contents": ".",
    "releaseDraft": true,
    "testScript": "test:all",
    "message": "\"Version %s created\""
  }
}
